<h2>Register to <%= @event.name %></h2>

<%= form_tag controller: 'events', action: 'register_user', method: 'post' do %>
<!-- action: son metodos -->
    <%= label_tag "Email" %>
    <%= text_field_tag :email %>
    
    <%= submit_tag "Registrar usuario" %>
<% end %>

<table class='table'>
    <thead>
        <tr class="p-3 mb-2 bg-success text-white">
        <th>Email</th>
        </tr>
    </thead>
    <tbody>
        Tabla de usuarios
        <% @users_of_event.each do |user| %>
            <tr>
                <td class="border border-success"> <%= user.email %> </td>
            <tr>
        <% end %>
    </tbody>
</table>